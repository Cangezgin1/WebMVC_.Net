
@model EntityLayer.Concrete.Writer

@{
    Layout = null;
}

<!DOCTYPE html>
    <html lang="tr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <title>Yazar Kayıt Ol Sayfası</title>
        <link rel="stylesheet" href="~/SignUp-Template/fonts/material-icon/css/material-design-iconic-font.min.css">
        <link rel="stylesheet" href="~/SignUp-Template/css/style.css">
    </head>
    <body>
        <div class="main">
            <section class="signup">
                <div class="container">
                    <div class="signup-content">
                        <div class="signup-form">
                            <h2 class="form-title">YAZAR KAYIT SAYFASI</h2>
                            @using (Html.BeginForm("KayıtOl", "Register", FormMethod.Post))
                            {
                                <div class="form-group">
                                    <label for="name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                                    <input type="text" name="WriterName" id="name" placeholder="İsim" />
                                </div>
                                <div class="form-group">
                                    <label for="name"><i class="zmdi zmdi-email"></i></label>
                                    <input type="text" name="WriterSurName" placeholder="Soyisim" />
                                </div>
                                <div class="form-group">
                                    <label for="email"><i class="zmdi zmdi-lock"></i></label>
                                    <input type="email" name="WriterMail" placeholder="Mail Adresi" />
                                </div>
                                <div class="form-group">
                                    <label for="re-pass"><i class="zmdi zmdi-lock-outline"></i></label>
                                    <input type="password" name="WriterPassword" placeholder="Şifre" />
                                </div>
                                <div class="form-group form-button">
                                    <input type="submit" class="form-submit" value="Kayıt Ol" />
                                </div>
                            }
                        </div>
                        <div class="signup-image">
                            <figure><img src="~/SignUp-Template/images/signup-image.jpg" alt="sing up image"></figure>
                        </div>
                    </div>
                </div>
            </section>
        </div>
        <script src="~/SignUp-Template/vendor/jquery/jquery.min.js"></script>
        <script src="~/SignUp-Template/js/main.js"></script>
    </body>
    </html>
